// Place your key bindings in this file to override the defaults
[
    {
        "key": "j",
        "command": "list.focusDown",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "k",
        "command": "list.focusUp",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "l",
        "command": "list.expand",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "h",
        "command": "list.collapse",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "enter",
        "command": "list.select",
        "when": "filesExplorerFocus && !inputFocus"
    },
    // {
    //     "key": "ctrl+l",
    //     "command": "workbench.action.terminal.focusNextPane",
    //     "when": "terminalFocus"
    // },
    {
        "key": "ctrl+shift+5",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+5",
        "command": "-workbench.action.terminal.split",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "false && terminalFocus"
    },
    {
        "key": "alt+cmd+up",
        "command": "-workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    {
        "key": "alt+cmd+up",
        "command": "-workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight",
        "when": "!terminalFocus"
    },
    // Navigate out of the terminal
    {
        "key": "ctrl+shift+k",
        "command": "workbench.action.navigateUp",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateDown",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+shift+j",
        "command": "workbench.action.navigateDown",
        "when": "!terminalFocus"
    },
    // {
    //     "key": "ctrl+h",
    //     "command": "workbench.action.terminal.focusPreviousPane",
    //     "when": "terminalFocus"
    // }
],
